<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#eeeeee"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                >

                <LinearLayout
                    android:id="@+id/ll_share_wechat"
                    style="@style/wechat_share_ll_dialog_share">

                    <ImageView
                        style="@style/wechat_share_iv_dialog_share"
                        android:src="@drawable/wechat_share_wechat" />

                    <TextView
                        style="@style/wechat_share_tv_dialog_share"
                        android:text="微信好友" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_wechat_friends"
                    style="@style/wechat_share_ll_dialog_share">

                    <ImageView
                        style="@style/wechat_share_iv_dialog_share"
                        android:src="@drawable/wechat_share_wechat_friends" />

                    <TextView
                        style="@style/wechat_share_tv_dialog_share"
                        android:text="朋友圈" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_copy"
                    style="@style/wechat_share_ll_dialog_share"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_share_copy"
                        style="@style/wechat_share_iv_dialog_share"
                        android:src="@drawable/wechat_share_copy" />

                    <TextView
                        android:id="@+id/tv_share_copy"
                        style="@style/wechat_share_tv_dialog_share"
                        android:text="复制链接" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_poster"
                    style="@style/wechat_share_ll_dialog_share"
                    android:visibility="visible">

                    <ImageView
                        style="@style/wechat_share_iv_dialog_share"
                        android:src="@drawable/wechat_share_poster" />

                    <TextView
                        style="@style/wechat_share_tv_dialog_share"
                        android:text="海报分享" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/wechat_share_bottom_text_padding"
                android:text="@string/wechat_share_cancel"
                android:background="@color/wechat_share_bottom_text_background"
                android:textColor="@color/wechat_share_bottom_text_color" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>

